(package-initialize)

(setq inhibit-startup-message t)

;; Disable tool bar, menu bar, scoll bar
(tool-bar-mode -1)
(menu-bar-mode -1)
(scroll-bar-mode -1)

;; Highlight current line
(global-hl-line-mode t)

(line-number-mode t)

;; Custom font
(set-frame-font "Operator Mono 13" nil t)

;; Customise theme
(load-theme 'deeper-blue)
